<header>
    <!-- TOP HEADER -->
    <div id="top-header">
        <div class="container">
            <ul class="header-links pull-left">
                <li><a href="#"><i class="fa fa-phone"></i> +84968454617</a></li>
                <li><a href="#"><i class="fa fa-envelope-o"></i> laihuyha@gmail.com</a></li>
                <li><a href="#"><i class="fa fa-map-marker"></i> TP.HCM</a></li>
            </ul>
            <ul class="header-links pull-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="MyAccount.html"><i class="fa fa-user-o"></i>Xin chào @User.Identity.Name</a></li>
                    <li><a href="logout"><i class="fas fa-power-off"></i>Đăng xuất</a></li>
                }
                else
                {
                    <li><a href="register.html"><i class="far fa-registered"></i>Đăng ký</a></li>
                    <li><a href="login.html"><i class="fas fa-power-off"></i>Đăng nhập</a></li>
                }
            </ul>
        </div>
    </div>
    <!-- /TOP HEADER -->
    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- LOGO -->
                <div class="col-md-3">
                    <div class="header-logo">
                        <a asp-controller="Home" asp-action="Index" class="logo">
                            <img src="~/_UserAssets/img/icon-homee.jpg" style="width:60px; height:60px;">
                            <img src="~/_UserAssets/img/logo.png" style="height:280px;" alt="">
                        </a>
                    </div>
                </div>
                <!-- /LOGO -->
                <!-- SEARCH BAR -->
                <div class="col-md-6">
                    <div class="header-search">
                        <form>
                            <select class="input-select">
                                <option value="0">All Categories</option>
                                <option value="1">Category 01</option>
                                <option value="1">Category 02</option>
                            </select>
                            <input class="input" placeholder="Search here">
                            <button class="search-btn">Search</button>
                        </form>
                    </div>
                </div>
                <!-- /SEARCH BAR -->
                <!-- ACCOUNT -->
                <div class="col-md-3 clearfix">
                    <div class="header-ctn">
                        <!-- Cart -->
                        <div class="dropdown">
                            @await Component.InvokeAsync("NumberCart")
                            @await Component.InvokeAsync("HeaderCart")
                        </div>
                        <!-- /Cart -->
                        <!-- Menu Toogle -->
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                        <!-- /Menu Toogle -->
                    </div>
                </div>
                <!-- /ACCOUNT -->
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- /MAIN HEADER -->
</header>