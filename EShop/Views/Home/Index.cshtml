    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">New Products</h3>
                </div>
            </div>
            <!-- /section title -->
            <!-- Products tab & slick -->
            @Html.Partial("~/Views/Product/NewProductPartial.cshtml", _lstNewProduct)
            <!-- Products tab & slick -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- END NEWPRODUCTS SECTION -->
