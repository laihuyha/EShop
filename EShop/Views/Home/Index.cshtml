@using EShop.Models;
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

@{ 
    IEnumerable<Product> _lstNewProduct = (IEnumerable<Product>)ViewBag.ListNPD;
}

<!-- NEWPRODUCTS SECTION -->
