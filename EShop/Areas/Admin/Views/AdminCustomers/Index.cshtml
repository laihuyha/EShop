@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<EShop.Models.Customer>
    @{
    int _current = ViewBag.CurrentPage;
    ViewData["Title"] = "Index" + _current;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="card" style="border-radius: 1rem; margin-top:10%">
        <div class="card-body">
            <div class="row m-b-30" style="margin-bottom:15px;">
                <div class="col-lg-8">
                    <div class="d-md-flex">
                                                @* <div class="m-b-10">
                            <select class="custom-select" id="idStt" name="StatusID" style="min-width: 180px;"
                                asp-items="ViewBag.Status">
                                <option value="" disabled selected>Status</option>
                            </select>
                        </div>*@
                    </div>
                </div>
                <div class="col-lg-4 text-right">
                    <a asp-area="Admin" asp-controller="AdminCustomers" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus" style="margin-right: 10px;"></i>
                        <span>Thêm Khách Hàng</span>
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th class="align-middle text-center">ID</th>
                            <th class="align-middle text-center">Họ và Tên</th>
                            <th class="align-middle text-center">BirthDay</th>
                            <th class="align-middle text-center">Mail</th>
                            <th class="align-middle text-center">Số điện thoại</th>
                            <th class="align-middle text-center">Thành phố</th>
                            <th class="align-middle text-center">Is Actived?</th>
                            <th class="align-middle text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                        foreach (var item in Model)
                        {
                        <tr>
                            <td class="align-middle text-center">
                                @item.CustommerId
                            </td>
                            <td class="align-middle text-center">
                                <h6 class="m-b-0 m-l-10">@item.FullName</h6>
                            </td class="align-middle text-center">
                            <td class="align-middle text-center">@item.BirthDay</td>
                            <td class="align-middle text-center">@item.Mail</td>
                            <td class="align-middle text-center"> @item.Phone</td>
                            <td class="align-middle text-center">@item.Location.Name</td>
                            <td class="align-middle text-center">
                                @if(item.IsActived)
                                {
                                <span class="badge badge-lg badge-success">Actived</span>
                                }
                                else
                                {
                                <span class="badge badge-lg badge-secondary">Disable</span>
                                }
                            </td>
                            <td class="align-middle text-center">
                                <a asp-area="Admin" asp-controller="AdminCustomers" asp-action="Details"
                                    asp-route-id="@item.CustommerId" class="btn btn-outline-info btn-block btn-xs"><i
                                        class="fas fa-info-circle" style="margin-right:10px;"></i>Xem</a>
                                <a asp-area="Admin" asp-controller="AdminCustomers" asp-action="Edit"
                                    asp-route-id="@item.CustommerId" class="btn btn-outline-warning btn-xs btn-block"><i
                                        class="fas fa-edit" style="margin-right:10px;"></i>Sửa</a>
                            </td>
                        </tr>
                        }
                        }
                    </tbody>
                </table>

                <!--Pagination-->
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
@*                        <li class="page-item disabled">
                            <a class="page-link" href="javascript:;" tabindex="-1">
                                <i class="fa fa-angle-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="javascript:;">1</a></li>
                        <li class="page-item active"><a class="page-link" href="javascript:;">2</a></li>
                        <li class="page-item"><a class="page-link" href="javascript:;">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="javascript:;">
                                <i class="fa fa-angle-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>*@
                        <pager  class="paper-container" list="@Model" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index"></pager>
                    </ul>
                </nav>
                <!--End Pagination-->
            </div>
        </div>
    </div>
    <!-- Theme style -->
    <link rel="stylesheet" href="~/_AdminAssets/dist/css/adminlte.min.css">
@*    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/material-kit.min.css">*@